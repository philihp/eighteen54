<%= link_to 'Back', @instance %></td> |
<%= link_to 'New Player', new_instance_player_path %>

<h1>Players for Instance <%= @instance.id %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= link_to 'Show', [player.instance, player] %></td>
        <td><%= link_to 'Edit', edit_instance_player_path(player.instance, player) %></td>
        <td><%= link_to 'Destroy', [player.instance, player], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

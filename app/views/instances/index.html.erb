<% content_for :nav do %>
  <ul class="nav navbar-nav">
    <li><%= link_to 'Back', welcome_index_path %></li>
  </ul>
<% end %>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phase</th>
      <th>Round</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instances.each do |instance| %>
      <tr>
        <td><%= instance.name %></td>
        <td><%= instance.phase %></td>
        <td><%= instance.round %></td>
        <td>
          <%= link_to 'Show', instance, class: 'btn btn-default btn-sm' %>
          <%= link_to 'Edit', edit_instance_path(instance), class: 'btn btn-default btn-sm' %>
          <%= link_to 'Destroy', instance, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3"></td>
      <td><%= link_to 'Create', new_instance_path, class: 'btn btn-primary btn-sm' %></td>
    </tr>
  </tfoot>
</table>


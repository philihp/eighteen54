<p id="notice"><%= notice %></p>

<%= link_to 'Create', new_instance_path %>

<h1>List Instances</h1>

<table>
  <thead>
    <tr>
      <th>Phase</th>
      <th>Round</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instances.each do |instance| %>
      <tr>
        <td><%= instance.phase %></td>
        <td><%= instance.round_name %></td>
        <td><%= link_to 'Show', instance %></td>
        <td><%= link_to 'Edit', edit_instance_path(instance) %></td>
        <td><%= link_to 'Destroy', instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
